@page
@model MoviesWebApp.Pages.Admin.Distributors.DeleteModel
@{
}

<form method="post">
	<input type="hidden" asp-for="Distributor.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Distributor</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Distributor.Name"></label>
			<input asp-for="Distributor.Name" disabled class="form-control" />
		</div>
	
		<button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back To List</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
