@page
@model MoviesWebApp.Pages.Admin.Formats.EditModel
@{
}

<form method="post">
	<input type="hidden" asp-for="Format.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Format</h2>
			<hr />
		</div>
		@* <div asp-validation-summary="All" class="text-danger"></div> *@
		<div class="mb-3">
			<label asp-for="Format.Name"></label>
			<input asp-for="Format.Name" class="form-control" />
			<span asp-validation-for="Format.Name" class="text-danger"></span>
		</div>
	
		<button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back To List</a>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
